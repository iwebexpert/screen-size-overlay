{
  "name": "screen-size-overlay",
  "description": "A lightweight and flexible React component for displaying the current screen size and active breakpoint. Includes presets for Tailwind CSS, Bootstrap (4/5), Foundation, Bulma and MUI with full support for custom breakpoints. Perfect for quick debugging and ensuring responsive UI during development",
  "version": "1.2.1",
  "types": "dist/index.d.ts",
  "main": "dist/screen-size-overlay.umd.js",
  "module": "dist/screen-size-overlay.es.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/screen-size-overlay.es.js",
      "require": "./dist/screen-size-overlay.umd.js"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "type": "module",
  "private": false,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.10.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "rollup-preserve-directives": "^1.1.3",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^6.0.11",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "homepage": "https://github.com/iwebexpert/screen-size-overlay#readme",
